<View fx:id="ingresargramaje" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shrimpmovilafterburner.views.IngresarGramajePresenter">    
   <center>      
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label maxWidth="116.0" prefHeight="18.0" prefWidth="60.0" text="Empresa" />
                  <ComboBox fx:id="cmbEmpresa" onAction="#comboBoxEmpresaAction" prefHeight="28.0" prefWidth="200.0" promptText="elija la empresa" visibleRowCount="20">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label maxWidth="116.0" prefHeight="18.0" prefWidth="60.0" text="Sector" />
                  <ComboBox fx:id="cmbSector" prefHeight="28.0" prefWidth="200.0" promptText="elija el sector" visibleRowCount="20">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="60.0" text="Fecha" />
